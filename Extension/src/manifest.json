{
  "name": "PGuard AppRating",
  "description": "rates PlayStore Applications based on 30 data safety criteria",
  "version": "0.1",
  "page_action":{
    "default_popup": "/popup/popup.html"
  },
  "manifest_version": 2,
  "permissions": ["storage", "declarativeContent" ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}